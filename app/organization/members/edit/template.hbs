<div class="panel">
  <div class="panel-heading">
    <h3>Edit {{model.name}} roles at {{organization.name}}</h3>
  </div>

  <div class="panel-body">
    <form role='form'>

      <div class="form-group">
        <ul>
          {{#each organization.roles as |role|}}
            <li class="role">
              {{organization-membership-checkbox
                user=model
                organizationRole=role
                changeset=changeset}}
              <label>{{role.name}} Role</label>
            </li>
          {{/each}}
        </ul>
      </div>
      <div class="form-group">
        <button {{action 'save'}}
                class='btn btn-primary' type='submit'>
          Update User Roles
        </button>
      </div>
    </form>
  </div>
</div>
