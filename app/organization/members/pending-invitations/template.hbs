<div class="row">
  <div class="col-xs-12">
    <div class="pull-right">
      {{invite-member-button
          organization=organization
          currentUserRoles=currentUserRoles
          currentUser=session.currentUser}}
    </div>
  </div>
</div>

<div class="sort-group organization-pending-invitations">
  <h3 class="heading heading--caps heading--sm">Pending Invitations</h3>

  <table class="aptable">
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Invited By</th>
        <th>Invited On</th>
        <th class="aptable__actions">Actions</th>
      </tr>
    </thead>

    <tbody>
      {{#each sortedInvites as |invitation|}}
        {{partial 'organization/invited-user-table-row'}}
      {{/each}}
    </tbody>
  </table>
</div>
