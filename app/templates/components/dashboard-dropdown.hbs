<div class="btn-group {{if isOpen 'open'}}">
  <a href="#" class="btn btn-link" {{action "toggle"}}>
    {{title}}
  </a>

  <a href="#" class="btn btn-link dropdown-toggle" {{action "toggle"}}>
    <i class="fa fa-chevron-down"></i>
  </a>

  {{#if isOpen}}
    <ul class="dropdown-menu" role="menu">
      {{yield}}
    </ul>
  {{/if}}
</div>
