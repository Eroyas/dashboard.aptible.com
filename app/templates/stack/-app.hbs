{{#link-to 'app' app class="panel-link"}}
  <div class="panel panel-default panel-subdued app resource-list-item">
    <div class="panel-heading">
      <h5>{{app.handle}}</h5>
    </div>
    <div class="panel-body">
      {{#each app.services as |service|}}
        <span class="service-badge">
          <span class="service-name">{{service.processType}}</span>
          <span class="service-container-count">{{service.containerCount}}</span>
        </span>
      {{else}}
        <span class="empty-service">No Services Configured</span>
      {{/each}}
    </div>
  </div>
{{/link-to}}
