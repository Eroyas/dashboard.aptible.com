<header class="resource-header">
  <div class="container">

    <h1 class="resource-title">{{model.handle}}</h1>

    <ul class="resource-metadata">

      {{#if model.allowPHI}}
        <li class="resource-metadata-item">
          <h5 class="resource-metadata-title">Dedicated Stack</h5>
          <h3 class="resource-metadata-value"><span class="success">PHI Ready</span></h3>
        </li>
      {{else}}
        <li class="resource-metadata-item">
          <h5 class="resource-metadata-title">Shared Stack</h5>
          <h3 class="resource-metadata-value"><span class="danger">Not Ready for PHI</span></h3>
        </li>
      {{/if}}

      <li class="resource-metadata-item">
        <h5 class="resource-metadata-title">{{persistedApps.length}} Apps</h5>
        <h3 class="resource-metadata-value">Running on {{totalContainerCount}} containers</h3>
      </li>

      <li class="resource-metadata-item">
        <h5 class="resource-metadata-title">{{persistedDatabases.length}} Databases</h5>
        <h3 class="resource-metadata-value">Using {{format-disk-size totalDiskSize}} of Disk</h3>
      </li>

      <li class="resource-metadata-item">
        <h5 class="resource-metadata-title">Log Drains</h5>
        <h3 class="resource-metadata-value">
          {{#with model.logDrains.firstObject as |logDrain|}}
            {{logDrain.drainHost}}:{{logDrain.drainPort}}
          {{else}}
            None configured.
          {{/with}}
        </h3>
      </li>
    </ul>
  </div>
</header>
