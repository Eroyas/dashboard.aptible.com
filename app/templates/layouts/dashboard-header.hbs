<header class="layout-header">
  {{partial "header"}}
  {{#unless session.currentUser.verified}}
    {{verification-code-reset}}
  {{/unless}}

  {{#if flashMessages.queue}}
    <div class="notifications">
      {{#each flashMessages.queue as |flash|}}
        {{flash-message flash=flash}}
      {{/each}}
    </div>
  {{/if}}
</header>
