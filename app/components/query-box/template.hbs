<form {{action "submit" email on="submit"}}>
  {{#unless analytics.hasEmail}}
    <div class="form-group">
      {{input type="email"
        value=email
        autofocus=true
        class="form-control"
        placeholder="Email"}}
    </div>
  {{/unless}}
  <div class="form-group">
    <button class="btn btn-primary" type="submit" disabled={{noEmail}}>Start Chatting</button>
  </div>
</form>
