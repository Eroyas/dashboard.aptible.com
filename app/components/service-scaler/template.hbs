<div class="row">
  <div class="col-xs-6">
    Containers
  </div>
  <div class="col-xs-6">
    <div class="pull-right">
      {{containerCount}} Production App at $ per Hour
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6">
    <div class="container-count">
      {{containerCount}}
    </div>
    <div class='service-containers-select'>
      {{no-ui-slider didSlide="setContainerCount"
                     start=containerCount
                     rangeMin=1
                     rangeMax=10
                     step=1}}

      {{#if error}}
        <div class="error">
          {{error}}
        </div>
      {{/if}}

      {{#if isDirty}}
        <button {{action "scale"}} class="btn btn-xs slider-confirm">
          {{#if isSaving}}
            Saving...
          {{else}}
            Scale
          {{/if}}
        </button>

        <button {{action "cancel"}} class="btn">Cancel</button>
      {{/if}}
    </div>
  </div>
  <div class="col-xs-6">
    <div class="pull-right">
      $438.24/month
    </div>
  </div>
</div>
