<div class="panel-heading">
  <div class="user-gravatar">
    {{gravatar-image email=user.email size=25}}
  </div>

  <div class="user-title">
    <h5 class="user-name">{{user.name}}</h5>
    <div class="user-email">{{user.email}}</div>
    <ul class="training-enrollment badge-list">
      {{training-enrollment-badge
          user=user
          criterion=complianceStatus.training
          tagName="li"}}

      {{training-enrollment-badge
          user=user
          criterion=complianceStatus.securityOfficerTraining
          tagName="li"}}
    </ul>
  </div>
</div>

<div class="panel-body">
  <ul class="resource-metadata">
    <li class="resource-metadata-item">
      <h5 class="resource-metadata-title">Recent Activity</h5>
      <h3 class="resource-metadata-value">
        {{#each status.documents as |document|}}
          {{document-activity-item document=document}}
        {{else}}
          No Training Activity Yet
        {{/each}}
      </h3>
    </li>
  </ul>
</div>

