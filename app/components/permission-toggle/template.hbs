{{#if roleIsOwner}}
  {{#bs-tooltip title=ownerTooltipTitle}}
    <i class="fa fa-check success"></i>
  {{/bs-tooltip}}
{{else}}
  {{#if userIsAuthorized}}
    {{x-toggle
      value=isChecked
      onToggle=(action 'onToggle')
      onLabel=true
      offLabel=false
      showLabels=false
      size='medium'}}
  {{else}}
    {{#if isChecked}}
      <i class="fa fa-check success"></i>
    {{else}}
      <i class="fa fa-times danger"></i>
    {{/if}}
  {{/if}}
{{/if}}