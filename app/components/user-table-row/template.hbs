<td class="profile--inline">
  {{gravatar-image
    email=user.email
    retina=true
    size=20
    class="profile-image"}}
  {{user.name}}
</td>
<td>{{user.email}}</td>
<td>
  {{#each organizationRoles as |role index|}}
    {{#link-to 'role' role.id}}
      {{#if (eq role.type 'owner')}}
        {{#bs-tooltip title="Account Owner"}}
          <i class="fa fa-shield bright-blue"></i>
        {{/bs-tooltip}}
      {{/if}}
      {{role.name}}{{if (eq index csvLastIndex) '' ', '}}
    {{/link-to}}
  {{/each}}
</td>
<td>{{otp-status otpEnabled=user.otpEnabled}}</td>
{{#if isAccountOwner}}
  <td class="aptable__actions">
    {{#link-to 'organization.members.edit' user classNames='btn btn-default btn-xs'}}
      {{#bs-tooltip title="Edit membership"}}
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      {{/bs-tooltip}}
    {{/link-to}}
  </td>
{{/if}}
