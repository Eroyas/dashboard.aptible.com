<main class="layout-content">
  <header>
    <div class="container">
      <h1 class="dashboard-header">{{model.organization.name}}</h1>
    </div>
  </header>


  <div class="container">
    {{#if model.allAlerts}}
      <section class="compliance-section">
        <header>
          <span class="header-title">Compliance Alerts</span>
          <span class="badge">{{model.alertCount}}</span>
        </header>

        <div class="row">
          <div class="col-xs-12">
            {{compliance-alerts}}
          </div>
        </div>
      </section>
    {{/if}}

    <section class="compliance-section">
      <header>
        <span class="header-title">Compliance Engines</span>
      </header>

      <div class="row">
        <div class="col-xs-6">
          {{#link-to-aptible app='compliance' path='risk' class="panel-link"}}
            {{compliance-engine-status status=model.risk class="risk-engine-status"}}
          {{/link-to-aptible}}
        </div>

        <div class="col-xs-6">
          {{#link-to-aptible app='compliance' path='policy' class="panel-link"}}
            {{compliance-engine-status status=model.policy class="policy-engine-status"}}
          {{/link-to-aptible}}
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6">
          {{#link-to-aptible app='compliance' path='security' class="panel-link"}}
            {{compliance-engine-status status=model.security class="security-engine-status"}}
          {{/link-to-aptible}}
        </div>

        <div class="col-xs-6">
          {{#link-to 'training' class="panel-link" class="panel-link"}}
            {{compliance-engine-status status=model.training class="training-engine-status"}}
          {{/link-to}}
        </div>
      </div>
    </section>

    {{#if authorization.features.spd}}
      {{compliance-dashboard-nav}}
    {{/if}}
  </div>
</main>