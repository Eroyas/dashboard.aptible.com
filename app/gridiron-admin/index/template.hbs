<main class="layout-content">
  <header>
    <div class="container">
      <h1 class="dashboard-header">{{model.organization.name}}</h1>
    </div>
  </header>


  <div class="container">
    {{#if model.hasCompletedSetup}}
      {{#if model.allAlerts}}
        <section class="compliance-section">
          <header>
            <span class="header-title">Compliance Alerts</span>
            <span class="badge">{{model.alertCount}}</span>
          </header>

          <div class="row">
            <div class="col-xs-12">
              {{compliance-alerts}}
            </div>
          </div>
        </section>
      {{/if}}
    {{else}}
      {{#spd-notice organizationProfile=model.organizationProfile}}
        {{#if (eq model.organizationProfile.currentStep 'start')}}
          <h1>Start Your Security Program</h1>
          <h2>Tell us more about your information security management program</h2>
        {{else}}
          <h1>Resume Setting Up Your Security Program</h1>
          <h2>Tell us more about your information security management program</h2>
        {{/if}}
      {{/spd-notice}}
    {{/if}}

    <section class="compliance-section {{if model.hasCompletedSetup 'spd-complete' 'spd-incomplete'}}">
      <header>
        <span class="header-title">Compliance Engines</span>
      </header>

      <div class="row">
        <div class="col-xs-6">
          {{#if authorization.features.engines.risk}}
            {{#link-to 'risk-assessments' class="panel-link"}}
              {{compliance-engine-status status=model.risk class="risk-engine-status"}}
            {{/link-to}}
          {{else}}
            {{#link-to-aptible app="compliance" path="risk" class="panel-link"}}
              {{compliance-engine-status status=model.risk class="risk-engine-status"}}
            {{/link-to-aptible}}
          {{/if}}
        </div>

        <div class="col-xs-6">
          {{#if authorization.features.engines.policy}}
            {{#link-to 'policy' class="panel-link"}}
              {{compliance-engine-status status=model.policy class="policy-engine-status"}}
            {{/link-to}}
          {{else}}
            {{#link-to-aptible app='compliance' path='policy' class="panel-link"}}
              {{compliance-engine-status status=model.policy class="policy-engine-status"}}
            {{/link-to-aptible}}
          {{/if}}
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6">
          {{#if authorization.features.engines.security}}
            {{#link-to 'security' class="panel-link"}}
              {{compliance-engine-status status=model.security class="security-engine-status"}}
            {{/link-to}}
          {{else}}
            {{#link-to-aptible app='compliance' path='security' class="panel-link"}}
              {{compliance-engine-status status=model.security class="security-engine-status"}}
            {{/link-to-aptible}}
          {{/if}}
        </div>

        <div class="col-xs-6">
          {{#if authorization.features.engines.training}}
            {{#link-to 'training' class="panel-link" class="panel-link"}}
              {{compliance-engine-status status=model.training class="training-engine-status"}}
            {{/link-to}}
          {{else}}
            {{#link-to-aptible app='compliance' path='training' class="panel-link"}}
              {{compliance-engine-status status=model.training class="training-engine-status"}}
            {{/link-to-aptible}}
          {{/if}}
        </div>
      </div>
    </section>

    {{#if authorization.features.spd}}
      {{compliance-dashboard-nav hasCompletedSetup=model.hasCompletedSetup}}
    {{/if}}
  </div>
</main>