<form class="create-log" {{action 'createLog' model on='submit'}}>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Create Log</h3>
    </div>
    <div class="panel-body">
      {{#if model.errors.length}}
        <div class="alert alert-warning">
          {{#each model.errors.messages as |message|}}
            <p>{{message}}</p>
          {{/each}}
        </div>
      {{/if}}

      <div class="form-group">
        <label class="block" for="drain-handle">Handle</label>
        {{handle-input class="form-control" value=model.handle name='handle'}}
      </div>
      <div class="form-group">
        <label class="block" for="drain-type">Type</label>
        {{#radio-button value="syslog_tls_tcp" groupValue=model.drainType name="drain-type"}}
          Syslog TLS TCP
        {{/radio-button}}
        {{#radio-button value="elasticsearch" groupValue=model.drainType name="drain-type"}}
          Elasticsearch
        {{/radio-button}}
      </div>
      <div class="form-group">
        <label class="block" for="drain-host">Syslog Host</label>
        {{input name='drain-host' value=model.drainHost class="form-control"}}
      </div>
      <div class="form-group">
        <label class="block" for="drain-port">Syslog Port</label>
        {{input name='drain-port' value=model.drainPort class="form-control"}}
      </div>
    </div>
  </div>
    <button {{action 'cancel' model}} class='btn btn-lg-text btn-default'>Cancel</button>
    <button {{action 'createLog' model}} {{bind-attr disabled=model.isSaving}} class='btn btn-primary'>
      {{#if model.isSaving}}
        Saving
      {{else}}
        Save Log
      {{/if}}
    </button>
</form>
