<header class="new-header">
  <div class="container">
    <div class='header-left'>
      <h2 class="sub-title">Security Program</h2>
      <h1 class="title">Security Controls</h1>
    </div>
    <div class="header-right">
      <ul class="header-actions">
        <li>
          <button {{action 'save'}} class="btn btn-default btn-sm save-settings">Save All</button>
        </li>
        <li>
          {{link-to 'Manage Data Environments' 'settings.data-environments' classNames="btn btn-default btn-sm"}}
        </li>
      </ul>
    </div>
  </div>
</header>

<div class="container main-body">
  {{spd-errors errors=errors}}

  {{#each model as |securityControlGroup|}}
    {{security-control-group
      securityControlGroup=securityControlGroup
      organizationUrl=organizationUrl}}
  {{/each}}
</div>



