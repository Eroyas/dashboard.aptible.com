{{#login-box}}
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      {{#if model.error}}
        {{#bs-alert alert="danger"}}
          {{model.error}}
        {{/bs-alert}}
      {{/if}}
      <div class="panel panel-subdued panel-focused">
        <div class="panel-heading">
          <div class="panel-heading-link">
            {{link-to 'Create an account' 'signup'}}
          </div>
          <h3>Sign in to your Aptible account</h3>
        </div>
        <div class="panel-body">
          <form>
            <div class="form-group">
              <label>Email</label>
              {{input type="email"
                value=model.email
                autofocus=true
                class="form-control"
                placeholder="Email"}}
            </div>
            <div class="form-group">
              <label>Password</label>
              {{input type="password"
                value=model.password
                class="form-control"
                placeholder="Password"}}
            </div>
            <button class="btn btn-primary btn-block btn-lg" {{action "login" model}}>
              Log in
            </button>
          </form>

          {{link-to "Forgot your password?" 'password.reset' classNames="pull-right forgot-password-link"}}
        </div>
      </div>
    </div>
  </div>
{{/login-box}}
